from pytest import raises


def test_model(root, db_session):
    from {{package}}.resources import CustomContent

    cc = CustomContent()
    assert cc.custom_attribute is None

    cc = CustomContent(custom_attribute='Foo')
    assert cc.custom_attribute == 'Foo'

    root['cc'] = cc = CustomContent()
    assert cc.name == 'cc'

    with raises(TypeError):
        cc = CustomContent(doesnotexist='Foo')
